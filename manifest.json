{
  "manifest_version": 3,
  "name": "おとり物件バスター",
  "version": "1.0.0",
  "description": "不動産ポータルサイトの物件をリアルタイム分析し、おとり物件の可能性をスコア表示するChrome拡張機能",
  "permissions": ["storage", "activeTab"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://suumo.jp/chintai/*",
        "*://suumo.jp/jj/chintai/*",
        "*://*.homes.co.jp/chintai/*",
        "*://*.athome.co.jp/chintai/*",
        "*://*.chintai.net/*",
        "*://realestate.yahoo.co.jp/rent/*"
      ],
      "js": [
        "src/types/index.js",
        "src/parsers/parser-utils.js",
        "src/market/market-data.js",
        "src/scoring/scoring-engine.js",
        "src/parsers/suumo-parser.js",
        "src/parsers/homes-parser.js",
        "src/parsers/athome-parser.js",
        "src/parsers/chintai-parser.js",
        "src/parsers/yahoo-parser.js",
        "src/overlay/overlay.js",
        "src/content/photo-prefetch.js",
        "src/content/content-main.js"
      ],
      "css": ["src/content/content-style.css"],
      "run_at": "document_idle"
    }
  ]
}
